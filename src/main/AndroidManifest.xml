<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qst.giftems">

    <application
        android:name ="com.qst.giftems.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.qst.giftems.activity.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qst.giftems.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.qst.giftems.activity.MyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qst.giftems.activity.PersonalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qst.giftems.activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qst.giftems.activity.SettingActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.AboutActivity"/>
        <activity android:name=".activity.ListLevel2Activity"/>
        <activity android:name=".activity.GiftActivity"/>
        <activity android:name=".activity.StrategyActivity"/>
        <activity android:name=".activity.UserAddressListActivity"/>
        <activity android:name=".activity.UserAddressActivity"/>
        <activity android:name=".activity.FavoriteActivity"/>
        <activity android:name=".activity.UserCalendarActivity"/>

    </application>

</manifest>